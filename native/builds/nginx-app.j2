server {
	client_max_body_size 100m;
    {{ "ssl_certificate     /sms-services-ssl/sms-sso.crt;" if mode == "https" else "" }}
	{{ "ssl_certificate_key /sms-services-ssl/sms-sso.key;" if mode == "https" else "" }}
    {{ "listen "~mapped_port~" ssl;" if mode == "https" else "listen "~mapped_port~";" }}
    server_name 0.0.0.0 localhost {{ ansible_ssh_host }};

    location / {
        include proxy_params;
        proxy_pass http://unix:{{ socket_file }};
        }
}
